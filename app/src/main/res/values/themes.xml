<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shimmerSkeleton">@color/gray_800</item>
        <item name="maskSkeleton">@color/gray_900</item>
        <item name="shimmerHintSkeleton">@color/bluew_300</item>
        <item name="maskHintSkeleton">@color/bluew_200</item>

        <item name="apptintIconCOlor">@color/blue_500</item>
        <item name="backgroundDialog">@color/white</item>
        <item name="backgroundAlert">@color/gray_900</item>
        <item name="backgroundBorder">@color/black</item>
        <item name="subTextColor">@color/gray_500</item>
        <item name="iconHint">#092B42</item>

        <item name="backgroundHint">@color/bluew_100</item>
        <item name="iMainColor">@color/blue_400</item>
        <item name="colorThird">@color/red_500</item>
        <item name="MainColor">@color/green_500</item>
        <item name="borderLighting">@color/blue_500</item>
        <item name="backgroundLighting">@color/light_blue_200</item>

        <item name="highInputColor">@color/white</item>
        <item name="hintInputColor">@color/gray_900</item>
        <item name="hintViewGrayColor">@color/gray_800</item>

        <!--calendar-->
        <item name="gridColor">@color/gray_900</item>
        <item name="textDayColor">@color/gray_400</item>
        <item name="textDayWeekendColor">@color/gray_500</item>
        <item name="highLightColor">@color/blue_500</item>
        <item name="textHighLightColor">@color/white</item>
        <item name="textHourColor">@color/gray_500</item>


        <item name="backgroundChat">@mipmap/background_white_chat</item>
        <item name="android:dateTextAppearance">@color/gray_500</item>

        <!--colorful-->
        <item name="palette_blue">@color/palette_blue_n_700</item>
        <item name="palette_green">@color/palette_green_n_700</item>
        <item name="palette_yellow">@color/palette_yellow_n_700</item>
        <item name="palette_red">@color/palette_red_n_700</item>
        <item name="palette_purple">@color/palette_purple_n_700</item>
        <item name="cardBackgroundColorTask">@color/white</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="poppinsFont">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="floatinButton">
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <style name="task_home_item" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="mainColors">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="buttonAction">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/blue_500</item>
    </style>

    <style name="subtext">
        <item name="android:textColor">@color/gray_300</item>
    </style>


    <style name="iconMain">
        <item name="android:tint">@color/blue_400</item>
        <item name="android:textColor">@color/blue_400</item>
    </style>

    <style name="iconHnT">
        <item name="android:tint">#092B42</item>
        <item name="android:textColor">#092B42</item>
    </style>

    <style name="subIcon">
        <item name="android:tint">@color/gray_300</item>
    </style>

    <style name="drawabe">
        <item name="tint">@color/black</item>
        <item name="android:iconTint">@color/black</item>
    </style>

    <style name="splash">
        <item name="background">@color/white</item>
        <item name="tint">@color/blue_500</item>
    </style>

    <style name="disable">
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="splashscreen" parent="Theme.AppWork">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="alarmColorBg">
        <item name="android:background">@color/blue_400</item>
    </style>

    <style name="alarmColorCardViewBg">
        <item name="background">@color/blue_500</item>
    </style>


    <style name="IconColor">
        <item name="android:tint">@color/blue_400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Calendar">
        <item name="ColorDays">@color/gray_400</item>
        <item name="ColorDaysInGrid">@color/black</item>
        <item name="ColorWeekendDays">@color/gray_500</item>
        <item name="ColorWeekendDaysInGrid">@color/gray_300</item>
        <item name="ColorToday">@color/blue_500</item>
        <item name="ColorTextHighlight">@color/white</item>
        <item name="ColorHighlight">@color/blue_500</item>
        <item name="ColorMonth">@color/black</item>
        <item name="ColorOutMonth">@color/gray_500</item>
    </style>

    <style name="AveragesLineChart">
        <item name="hintColors">@color/gray_800</item>
        <item name="textValuesColor">@color/gray_600</item>
    </style>

    <style name="AudioBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <style name="Theme.AppWork.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">8dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.AppWork.AppWidgetContainer" parent="Theme.AppWork.AppWidgetContainerParent">
        <item name="appWidgetPadding">0dp</item>
    </style>
</resources>