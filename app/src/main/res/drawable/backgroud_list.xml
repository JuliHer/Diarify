<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/gray_300_transparent"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item android:top="0.5dp"
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:end="0.5dp">
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="?hintInputColor"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</layer-list>