<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_300_transparent" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:end="1dp">
        <shape android:shape="rectangle">
            <solid android:color="?hintInputColor" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>