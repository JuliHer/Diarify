<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?backgroundBorder" />

                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:end="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="?backgroundDialog" />
                    <corners android:radius="3dp" />
                </shape>

            </item>
            <item android:bottom="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="?backgroundDialog" />
                    <padding
                        android:top="5dp"
                        android:bottom="5dp"
                        android:left="5dp"
                        android:right="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?colorPrimaryVariant" />

                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item
                android:top="3dp"
                android:bottom="3dp"
                android:left="3dp"
                android:end="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="?backgroundDialog" />
                    <corners android:radius="3dp" />
                </shape>

            </item>
            <item android:bottom="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="?backgroundDialog" />
                </shape>
            </item>

        </layer-list>
    </item>
</animated-selector>