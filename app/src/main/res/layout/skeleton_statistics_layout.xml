<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.artuok.appwork.library.AspectRatioView
                android:id="@+id/cardColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/yellow_700">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="1dp"
                    android:paddingStart="1dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/tag"
                        android:alpha="0.5"
                        android:padding="13dp"
                        />
                </LinearLayout>
            </com.artuok.appwork.library.AspectRatioView>

            <TextView
                android:layout_weight="1"
                android:id="@+id/title_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                android:textColor="?backgroundBorder"
                />


            <ImageView
                android:id="@+id/status_subject"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_check_circle"
                android:padding="5dp"
                app:tint="?subTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.faltenreich.skeletonlayout.SkeletonLayout>