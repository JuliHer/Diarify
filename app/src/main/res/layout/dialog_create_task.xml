<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?hintInputColor"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_temp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/banner_3"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/tag"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/status_item_task"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_baseline_circle_24"
                            android:layout_marginEnd="10dp"
                            app:tint="?subTextColor" />
                        <TextView
                            android:id="@+id/tag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject"
                            android:textFontWeight="500"
                            android:textColor="?subTextColor"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_paperclip"
                        app:tint="?subTextColor" />
                </LinearLayout>
                <EditText
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:hint="Text..."
                    android:textFontWeight="500"
                    android:textColorHint="?subTextColor"
                    android:background="@drawable/transparent_background"
                    android:textSize="18sp"
                    android:layout_marginVertical="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="?subTextColor" />
                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Date_string"
                            android:textSize="15sp"
                            android:textFontWeight="500"
                            android:textColor="?subTextColor"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            app:tint="?subTextColor" />
                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:textSize="15sp"
                            android:textFontWeight="500"
                            android:textColor="?subTextColor"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/check"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_check"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="7dp"
                        android:paddingRight="8dp"
                        android:elevation="4dp"
                        android:background="@drawable/send_button"
                        android:backgroundTint="?iMainColor"
                        app:tint="?hintInputColor"
                        android:layout_marginLeft="16dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="5dp">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>