<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAwaitingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/cancel_awaiting"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_left"
                        app:tint="?backgroundBorder" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pending_tasks"
                        android:layout_marginStart="5dp"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:fontFamily="@font/poppins"
                        android:textFontWeight="500"
                        android:includeFontPadding="false"
                        android:ellipsize="end"/>
                </LinearLayout>


                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <android.widget.Button
                    android:id="@+id/accept_awaiting"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/Accept_M"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="8dp"
                    android:backgroundTint="?iMainColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/activity"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/description_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:maxLines="3"
                    android:padding="6dp"
                    android:minLines="2"
                    android:gravity="top"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:hint="@string/description_string"
                    android:elegantTextHeight="true"
                    android:background="@drawable/textinput_background" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/subjects_fragment_menu"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/choose_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_subject"
                    android:background="@drawable/textinput_background"
                    android:textColor="?subTextColor"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="2dp"
                    android:textAllCaps="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Date_string"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/datepicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/datetext"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="--/--/----"
                        android:textSize="16sp"
                        android:background="@drawable/textinput_background"
                        android:padding="8dp"
                        android:textColor="?subTextColor"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/timetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-:-- a. m."
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:background="@drawable/textinput_background"
                        android:padding="8dp"
                        android:textColor="?subTextColor"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/camera"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?iMainColor"
                        android:clickable="true"
                        android:layout_marginEnd="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/camera"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/imagesRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>