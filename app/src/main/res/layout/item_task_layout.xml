<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="0dp"
        app:cardElevation="0dp"
        android:background="@drawable/transparent_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_corner_rounded">
                <ImageView
                    android:id="@+id/check"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_check"
                    android:padding="7dp"

                    android:layout_marginEnd="4dp"
                    app:tint="?backgroundBorder"
                    android:visibility="gone"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/backgroud_list"
                android:padding="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/subject"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/subject"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/in_process"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/in_process"
                                android:textColor="?subTextColor"
                                android:textFontWeight="500"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/title_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet Dolor un is falit pan es utn etie ha n smi isnup total"
                            android:textSize="18sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textFontWeight="500"
                            android:layout_marginBottom="5dp" />
                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/status_color_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/status_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?subTextColor"
                            android:paddingVertical="2dp"
                            android:paddingHorizontal="5dp"
                            android:includeFontPadding="false"
                            android:text="Open"
                            android:textFontWeight="600"
                            android:textSize="11sp"
                            android:textColor="?backgroundDialog" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/date_card"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="03 Abr 2023"
                        android:textSize="11sp"
                        android:layout_marginStart="5dp"
                        android:textColor="?subTextColor" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 p. m."
                        android:textSize="11sp"
                        android:textColor="?subTextColor" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>