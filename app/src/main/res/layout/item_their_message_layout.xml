<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?hintInputColor"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="1dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="start"
        android:layout_marginEnd="70dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <com.artuok.appwork.library.MsgFlexboxLayout
                android:id="@+id/msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="left|center_vertical"
                app:viewMain="@+id/mainMessage"
                app:viewSlave="@+id/timestampLayout">
                <TextView
                    android:id="@+id/mainMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="M"
                    android:minEms="2"
                    android:autoLink="email|phone|web"
                    android:textColorLink="?MainColor"/>

                <LinearLayout
                    android:id="@+id/timestampLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:14 PM"
                        android:textSize="11sp"
                        android:layout_gravity="end"
                        android:textColor="@color/gray_800"
                        />
                </LinearLayout>

            </com.artuok.appwork.library.MsgFlexboxLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>