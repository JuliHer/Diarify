<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bottom_bg"
    android:backgroundTint="?backgroundDialog"
    >

    <LinearLayout
        android:id="@+id/edit_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="15dp"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:textAllCaps="true"
            android:background="@drawable/background_top"
            android:textSize="20dp"
            android:textFontWeight="500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:id="@+id/day_of_frecuency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:backgroundTint="?backgroundHint"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Day"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/day_of_recurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:backgroundTint="?backgroundHint"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginVertical="4dp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:includeFontPadding="false" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/start_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3:00 PM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        app:tint="?backgroundBorder"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:id="@+id/end_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:00 PM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/accept"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Accept_M"
                    android:background="@drawable/button"
                    android:backgroundTint="?backgroundBorder"
                    android:textColor="?backgroundDialog" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_day"
            android:textFontWeight="500"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:paddingBottom="15dp"
            android:background="@drawable/background_top"
            android:layout_marginVertical="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">
            <TextView
                android:id="@+id/sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saturday"
                android:textSize="16sp"
                android:layout_marginVertical="4dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_selecting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_color"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:textFontWeight="500"
            android:background="@drawable/background_top"
            android:layout_marginVertical="5dp"
            android:paddingBottom="15dp"
            android:paddingHorizontal="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>

</LinearLayout>