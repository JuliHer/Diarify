<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_background"
        app:cardBackgroundColor="@android:color/transparent"
        android:elevation="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/display_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                style="@style/task_home_item"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_book"
                            app:tint="?iMainColor"
                            android:visibility="gone" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/usericon"
                            android:layout_marginEnd="5dp" />

                        <TextView
                            android:id="@+id/announser_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Facebook"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:textFontWeight="600"
                            android:textColor="?iMainColor" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/status_color_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="0dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/yellow_700"
                                android:paddingVertical="2dp"
                                android:paddingHorizontal="5dp"
                                android:includeFontPadding="false"
                                android:text="@string/ad"
                                android:textFontWeight="500"
                                android:textSize="12sp"
                                android:textColor="?hintInputColor" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <ImageView
                                android:id="@+id/image_content"
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:src="@mipmap/banner_3"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:id="@+id/images_content"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:dividerPadding="5dp">

                                <ImageView
                                    android:id="@+id/content_second"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@mipmap/banner_9"
                                    android:scaleType="centerCrop" />

                                <ImageView
                                    android:id="@+id/content_third"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@mipmap/banner_8"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/title_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mumbo jumbo la coste solanem la men in so"
                            android:textFontWeight="500"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/body_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum nafrae los manu the scope na fare no santos almane soleus no farie en ipsum. Silno nuam utsep naut unep culamer "
                            android:maxLines="3"
                            android:justificationMode="inter_word"
                            android:textColor="?subTextColor"
                            android:ellipsize="end"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:id="@+id/price_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$99"
                            android:includeFontPadding="false"
                            android:textSize="12sp"
                            android:paddingVertical="5dp"
                            android:textColor="?subTextColor" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="0dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="1dp"
                            android:layout_marginHorizontal="5dp">

                            <TextView
                                android:id="@+id/call_to_action"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?iMainColor"
                                android:paddingVertical="5dp"
                                android:paddingHorizontal="15dp"
                                android:includeFontPadding="false"
                                android:text="Install"
                                android:textFontWeight="600"
                                android:textSize="12sp"
                                android:textColor="@color/white" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>