<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bottom_bg"
    android:backgroundTint="?backgroundDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subject"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:background="@drawable/background_top"
        android:layout_marginTop="5dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="5dp"
        android:textFontWeight="500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_string"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />

        <EditText
            android:id="@+id/title_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subject"
            android:background="@drawable/textinput_background"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:id="@+id/color_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/textinput_background"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Color"
                android:padding="15dp" />

            <ImageView
                android:id="@+id/color_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_circle_24"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="16dp"
                app:tint="@color/yellow_700" />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chevron_right"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="16dp"
                app:tint="?backgroundBorder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accept_subject"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:layout_height="wrap_content"
                android:text="@string/Accept_M"
                android:textColor="?backgroundDialog"
                android:layout_weight="1"
                android:padding="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>